<div class="login-screen">
  <div class="container login-form">
    <h1>Please Log In</h1>

    <%= form_tag :login do %>
      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Log In" %>
      <h4><%= link_to "Create New Account", new_user_path %></h4>
    <% end  %></br>
  </div>
</div>
