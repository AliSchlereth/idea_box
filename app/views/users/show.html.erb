<h1>Welcome <%= @user.name %></h1>

<h3>Create a New Idea</h3>
<%= form_for [@user, @idea] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :resources %>
  <%= f.text_area :resources %>

  <%= f.submit "Create New Idea" %>
  <% end %>

