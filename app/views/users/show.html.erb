<h1>Welcome <%= @user.name %></h1>
<%= binding.pry if @user.email == "Edited Email" %>
  <%= @user.email %>

<h3>Create a New Idea</h3>
<%= form_for [@user, @idea] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :resources %>
  <%= f.text_area :resources %>
  <%= f.collection_select :category_id, @categories, :id, :name, include_blank: true %>

  <%= f.submit "Create New Idea" %>
  <% end %>

  <h3> <%= link_to "Create a New Category", new_category_path %></h3>
