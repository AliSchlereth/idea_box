<h1>Edit <%= @idea.name %></h1>
<p> <%= link_to "Back to #{@idea.name}", user_idea_path(@user, @idea) %></p>

<%= form_for [@user, @idea] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :resources %>
  <%= f.text_area :resources %>

  <%= f.submit "Update" %>
  <% end %>
