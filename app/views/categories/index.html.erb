<div class="info-details">
  <h1> All Categories </h1>

  <div class="container-fluid">
    <div class="row">
      <% @categories.each do |cat| %>
        <div class="col-md-2">
          <ul class=category_<%= cat.id %>>
            <%= link_to cat.name, category_path(cat) %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
