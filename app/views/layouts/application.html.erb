<!DOCTYPE html>
<html>
  <head>
    <title>IdeaBox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="col-md-12 navbar navbar-default navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Job Tracker", dashboard_index_path, class:"navbar-brand" %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Companies", companies_path%></li>
      <li><%= link_to "Jobs", jobs_path%></li>
      <li><%= link_to "Categories", categories_path%></li>
    </ul>
  </div>
</nav>

    <% flash.each do |key, value| %>
      <div class=flash_<%= key %>>
        <%= value %>
      </div>
      <% end  %>
      <% if logged_in? %>
      <% binding.pry %>
          <p><%= link_to "Log Out", logout_path, method: "delete" %></p>
      <% else %>
          <p><% link_to "Login", login_path %></p>
      <% end  %>
    <%= yield %>
  </body>
</html>
