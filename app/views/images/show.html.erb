<div class="image">
  <%= image_tag(@image.url, class:"img-thumbnail item-grid") %>
</div>

<div class="info-details">
  <h4>Image Ideas</h4>
  <div class="container-fluid">
    <div class="row">
      <% @image.ideas.each do |idea|  %>
        <div class="col-md-2">
          <%= link_to idea.name, user_idea_path(@user, idea) %>
        </div>
      <% end  %>
    </div>
  </div>
</div>
