<div class="info-details">
  <h1> All Categories </h1>

  <h4> <%= link_to "Create a New Category", new_admin_category_path %></h4>

  <div class="container">
  <div class="row">
    <% @categories.each do |cat| %>
      <div class="col-md-2">
        <ul class=category_<%= cat.id %>>
          <h4><%= link_to cat.name, category_path(cat) %></h4>
          <%= link_to "Edit", edit_admin_category_path(cat), class: "btn btn-default btn-xs" %>
          <%= link_to "Delete", admin_category_path(cat), method: "delete", class: "btn btn-default btn-xs" %>
        </ul>
      </div>
      <% end %>
    </div>
  </div>
</div>
